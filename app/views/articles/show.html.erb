<div class="container">
  <div class="collapse navbar-collapse d-flex justify-content-between">
    <div ><%= link_to "Wikinimous", articles_path %></div>
    <div><%= link_to "New Article", new_article_path %></div>
  </div>
  <div class="d-flex">
    <h1><%= @article.title %></h1>
    <div>
      <%= link_to article_path(@article), method: :delete, data: { confirm: "Do you want to delete #{@article.title}?" } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
    </div>
    <div>
    <%= link_to edit_article_path do %>
      <i class="fas fa-edit"></i>
    <% end %>
    </div>
  </div>
  <p><%= @article.content %></p>
</div>